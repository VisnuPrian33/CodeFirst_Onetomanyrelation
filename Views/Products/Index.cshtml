@model IEnumerable<CodeFirst.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Category)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Proid)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Proid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Proid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Proid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
